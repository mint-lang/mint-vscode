{
  "name": "mint",
  "displayName": "Mint",
  "description": "VS Code Support for Mint a refreshing programming language for the front-end web development",
  "version": "0.2.0",
  "publisher": "danielsokil",
  "repository": {
    "url": "https://github.com/s0kil/mint-vscode"
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "activationEvents": [
    "onLanguage:mint",
    "onCommand:mint.build",
    "onCommand:mint.compile",
    "onCommand:mint.docs",
    "onCommand:mint.formatAll",
    "onCommand:mint.init",
    "onCommand:mint.install",
    "onCommand:mint.loc",
    "onCommand:mint.start",
    "onCommand:mint.test",
    "onCommand:mint.version"
  ],
  "main": "./out/src/extension",
  "devDependencies": {
    "@types/node": "^13.13.4",
    "js-yaml": "^3.13.1",
    "typescript": "^3.8.3",
    "@types/vscode": "^1.44.0"
  },
  "scripts": {
    "convert": "js-yaml syntaxes/mint.tmLanguage.yaml > syntaxes/mint.tmLanguage.json",
    "postinstall": "tsc"
  },
  "icon": "images/logo.png",
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mint",
        "aliases": [
          "Mint",
          "mint"
        ],
        "extensions": [
          ".mint"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mint",
        "scopeName": "source.mint",
        "path": "./syntaxes/mint.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mint",
        "path": "./snippets/mint.json"
      }
    ],
    "commands": [
      {
        "command": "mint.build",
        "title": "Mint: Build Production Bundle"
      },
      {
        "command": "mint.compile",
        "title": "Mint: Compile project into single JavaScript file"
      },
      {
        "command": "mint.docs",
        "title": "Mint: Start documentation server"
      },
      {
        "command": "mint.formatAll",
        "title": "Mint: Format all files"
      },
      {
        "command": "mint.init",
        "title": "Mint: Initialize new project"
      },
      {
        "command": "mint.install",
        "title": "Mint: Install dependencies"
      },
      {
        "command": "mint.loc",
        "title": "Mint: Count lines of code"
      },
      {
        "command": "mint.start",
        "title": "Mint: Start development server"
      },
      {
        "command": "mint.test",
        "title": "Mint: Run tests"
      },
      {
        "command": "mint.version",
        "title": "Mint: Show current version"
      }
    ]
  }
}
